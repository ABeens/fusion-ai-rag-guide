---
import { ClientRouter } from "astro:transitions";
import { slide } from "astro:transitions";
const basePath = import.meta.env.BASE_URL;

interface Props {
    title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/png" href={`${basePath}/logo.png`} />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
        <ClientRouter />
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link
            href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;600;700&display=swap"
            rel="stylesheet"
        />
    </head>
    <body>
        <nav>
            <a href={`/${basePath}`} class="logo-container">
                <img
                    src={`${basePath}/logo.jpg`}
                    alt="Empowering con IA Logo"
                    class="nav-logo"
                />
                <span class="logo-text">FusionHit AI Workshop</span>
            </a>
            <div class="header-extra-info">2025-11-27</div>
        </nav>

        <main transition:animate={slide({ duration: "0.6s" })}>
            <slot />
        </main>

        <style is:global>
            :root {
                --bg-color: black;
                --text-color: white;
                --accent-blue: #3b82f6;
                --accent-orange: #f97316;
                --accent-green: #10b981;
                --accent-gradient: linear-gradient(
                    45deg,
                    #f97316,
                    #10b981,
                    #3b82f6
                );
                --nav-height: 80px;
            }

            body {
                margin: 0;
                padding: 0;
                font-family: "Outfit", sans-serif;
                background-color: var(--bg-color);
            }

            nav {
                position: relative;
                top: 30px;
                left: 0;
                width: 100%;
                height: var(--nav-height);
                display: flex;
                justify-content: space-between;
                align-items: center;
                padding: 0 2rem;
                box-sizing: border-box;
                z-index: 100;
                /* Minimal styling to let the content shine */
            }

            .logo-container {
                display: flex;
                align-items: center;
                gap: 1rem;
                text-decoration: none;
                color: var(--text-color);
            }

            .nav-logo {
                height: 50px;
                width: 50px;
                object-fit: contain;
                border-radius: 50%; /* Circular logo looks elegant */
            }

            .logo-text {
                font-size: 1.2rem;
                font-weight: 600;
                letter-spacing: 1px;
                text-transform: uppercase;
            }

            .header-extra-info {
                display: none;
                color: rgba(255, 255, 255, 0.6);
                font-size: 0.9rem;
                font-weight: 400;
                letter-spacing: 0.5px;
            }

            @media (min-width: 768px) {
                .header-extra-info {
                    display: block;
                }
            }

            main {
                min-height: 50vh;
                width: 100%;
                overflow: hidden;
            }
        </style>
    </body>
</html>
