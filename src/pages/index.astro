---
import Layout from '../layouts/Layout.astro';

const slides = [
	{
		title: "Inicio",
		subtitle: "Bienvenido a la nueva era",
		image: "https://images.unsplash.com/photo-1451187580459-43490279c0fa?q=80&w=1080&auto=format&fit=crop",
		link: "/"
	},
	{
		title: "Nosotros",
		subtitle: "Innovación y Tecnología",
		image: "https://images.unsplash.com/photo-1522071820081-009f0129c71c?q=80&w=1080&auto=format&fit=crop",
		link: "/about"
	},
	{
		title: "Servicios",
		subtitle: "Soluciones de IA",
		image: "https://images.unsplash.com/photo-1550751827-4bd374c3f58b?q=80&w=1080&auto=format&fit=crop",
		link: "/services"
	},
	{
		title: "Contacto",
		subtitle: "Hablemos de futuro",
		image: "https://images.unsplash.com/photo-1516387938699-a93567ec168e?q=80&w=1080&auto=format&fit=crop",
		link: "/contact"
	}
];
---

<Layout title="Empowering con IA">
	<div class="slider-container">
		{slides.map((slide, index) => (
			<a href={slide.link} class="slide-item" data-index={index}>
				<div class="slide-bg" style={`background-image: url(${slide.image})`}></div>
				<div class="slide-content">
					<h2>{slide.title}</h2>
					<p>{slide.subtitle}</p>
				</div>
				<div class="slide-overlay"></div>
			</a>
		))}
	</div>

	<div class="main-title">
		<h1>Empowering con IA</h1>
		<p>Explora el futuro de la inteligencia artificial</p>
	</div>
</Layout>

<style>
	.slider-container {
		display: flex;
		width: 100%;
		height: 80vh; /* Takes up most of the screen */
		padding: 0 2rem;
		box-sizing: border-box;
		gap: 1rem;
		align-items: center;
		justify-content: center;
		margin-top: 2rem;
	}

	.slide-item {
		position: relative;
		height: 100%;
		flex: 1;
		border-radius: 40px; /* Rounded strips */
		overflow: hidden;
		cursor: pointer;
		transition: flex 0.5s cubic-bezier(0.25, 1, 0.5, 1), filter 0.5s ease;
		filter: grayscale(100%);
		text-decoration: none;
	}

	.slide-item:hover {
		flex: 3; /* Expands on hover */
		filter: grayscale(0%);
	}

	.slide-bg {
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		background-size: cover;
		background-position: center;
		transition: transform 0.5s ease;
	}

	.slide-item:hover .slide-bg {
		transform: scale(1.05);
	}

	.slide-overlay {
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		background: linear-gradient(to bottom, rgba(0,0,0,0.1), rgba(0,0,0,0.6));
		opacity: 0.6;
		transition: opacity 0.3s ease;
	}

	.slide-item:hover .slide-overlay {
		opacity: 0.2;
	}

	.slide-content {
		position: absolute;
		bottom: 2rem;
		left: 0;
		width: 100%;
		text-align: center;
		z-index: 2;
		opacity: 0;
		transform: translateY(20px);
		transition: all 0.4s ease 0.1s;
		color: white;
	}

	.slide-item:hover .slide-content {
		opacity: 1;
		transform: translateY(0);
	}

	.slide-content h2 {
		font-size: 2rem;
		margin: 0;
		font-weight: 700;
		text-transform: uppercase;
		letter-spacing: 2px;
	}

	.slide-content p {
		font-size: 1rem;
		margin: 0.5rem 0 0;
		font-weight: 300;
	}

	.main-title {
		text-align: center;
		margin-top: 2rem;
		opacity: 0;
		animation: fadeIn 1s ease forwards 0.5s;
	}

	.main-title h1 {
		font-family: 'Outfit', sans-serif; /* Or a serif font like the reference */
		font-size: 3rem;
		margin: 0;
		color: #1a1a1a;
	}

	.main-title p {
		font-size: 1rem;
		color: #666;
		text-transform: uppercase;
		letter-spacing: 2px;
		margin-top: 0.5rem;
	}

	@keyframes fadeIn {
		from { opacity: 0; transform: translateY(20px); }
		to { opacity: 1; transform: translateY(0); }
	}

	/* Responsive adjustments */
	@media (max-width: 768px) {
		.slider-container {
			flex-direction: column;
			height: auto;
			gap: 1rem;
		}
		
		.slide-item {
			width: 100%;
			height: 200px;
			flex: none;
		}

		.slide-item:hover {
			flex: none;
			height: 300px;
		}
	}
</style>
