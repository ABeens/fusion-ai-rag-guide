---
import Layout from "../layouts/Layout.astro";

const slides = [
	{
		title: "Google Colab",
		subtitle: "Entorno de trabajo gratuito",
		image: "/colab.png",
		link: "/colab",
	},
	{
		title: "OpenAI Api",
		subtitle: "Configurando el api de open ai",
		image: "/open-ai.png",
		link: "/open-ai",
	},
	{
		title: "Documentación",
		subtitle: "Documentación del workshop",
		image: "/documentation.png",
		link: "/documentation",
	},
	{
		title: "Contacto",
		subtitle: "Hablemos de futuro",
		image: "/example.png",
		link: "/contact",
	},
];
---

<Layout title="Empowering con IA">
	<div class="main-title">
		<h1>Empodera tu LLM</h1>
		<p>Explora, Aprende e Innova</p>
		<div class="slider-container">
			{
				slides.map((slide, index) => (
					<a
						href={slide.link}
						class="slide-item"
						data-index={index}
						target={
							slide.link.startsWith("http") ? "_blank" : undefined
						}
						rel={
							slide.link.startsWith("http")
								? "noopener noreferrer"
								: undefined
						}
					>
						<div
							class="slide-bg"
							style={`background-image: url(${slide.image})`}
						/>
						<div class="slide-title">
							<span>{slide.title}</span>
						</div>
						<div class="slide-content">
							<h2>{slide.title}</h2>
							<p>{slide.subtitle}</p>
						</div>
						<div class="slide-overlay" />
					</a>
				))
			}
		</div>
	</div>

	<style>
		.slider-container {
			display: flex;
			width: 100%;
			height: 70vh; /* Takes up most of the screen */
			padding: 4rem 20rem;
			box-sizing: border-box;
			gap: 1rem;
			align-items: center;
			justify-content: center;
			margin-top: 1rem;
		}

		.slide-item {
			position: relative;
			height: 100%;
			flex: 1;
			border-radius: 40px; /* Rounded strips */
			overflow: hidden;
			cursor: pointer;
			transition:
				flex 0.5s cubic-bezier(0.25, 1, 0.5, 1),
				filter 0.5s ease;
			filter: grayscale(100%);
			text-decoration: none;
		}

		.slide-item:hover {
			flex: 3; /* Expands on hover */
			filter: grayscale(0%);
		}

		.slide-bg {
			position: absolute;
			top: 0;
			left: 0;
			width: 100%;
			height: 100%;
			background-size: cover;
			background-position: center;
			transition: transform 0.5s ease;
		}

		.slide-item:hover .slide-bg {
			transform: scale(1.05);
		}

		.slide-overlay {
			position: absolute;
			top: 0;
			left: 0;
			width: 100%;
			height: 100%;
			background: linear-gradient(
				to bottom,
				rgba(0, 0, 0, 0.1),
				rgba(0, 0, 0, 0.6)
			);
			opacity: 0.6;
			transition: opacity 0.3s ease;
		}

		.slide-item:hover .slide-overlay {
			opacity: 0.2;
		}

		.slide-content {
			position: absolute;
			bottom: 2rem;
			left: 0;
			width: 100%;
			text-align: center;
			z-index: 2;
			opacity: 0;
			transform: translateY(20px);
			transition: all 0.4s ease 0.1s;
			color: white;
		}

		.slide-item:hover .slide-content {
			opacity: 1;
			transform: translateY(0);
		}

		.slide-content h2 {
			font-size: 2rem;
			margin: 0;
			font-weight: 700;
			text-transform: uppercase;
			letter-spacing: 2px;
		}

		.slide-content p {
			font-size: 1rem;
			margin: 0.5rem 0 0;
			font-weight: 300;
		}

		.slide-title {
			position: absolute;
			top: 50%;
			left: 50%;
			transform: translate(-50%, -50%);
			z-index: 3;
			opacity: 1;
			transition: opacity 0.4s ease;
			pointer-events: none;
		}

		.slide-title span {
			color: white;
			font-size: 0.9rem;
			font-weight: 500;
			text-transform: uppercase;
			letter-spacing: 3px;
			text-shadow: 0 2px 8px rgba(0, 0, 0, 0.5);
		}

		.slide-item:hover .slide-title {
			opacity: 0;
		}

		.main-title {
			text-align: center;
			margin-top: 2rem;
			opacity: 0;
			animation: fadeIn 1s ease forwards 0.5s;
		}

		.main-title h1 {
			font-family:
				"Outfit", sans-serif; /* Or a serif font like the reference */
			font-size: 3rem;
			margin: 0;
			color: var(--accent-blue);
		}

		.main-title p {
			font-size: 1rem;
			color: var(--text-color);
			text-transform: uppercase;
			letter-spacing: 2px;
			margin-top: 0.5rem;
		}

		@keyframes fadeIn {
			from {
				opacity: 0;
				transform: translateY(20px);
			}
			to {
				opacity: 1;
				transform: translateY(0);
			}
		}

		/* Responsive adjustments */
		@media (max-width: 768px) {
			.main-title h1 {
				font-size: 2rem;
			}

			.slide-bg {
				background-size: fill;
				background-repeat: no-repeat;
				background-position: top;
			}
			.slider-container {
				flex-direction: column;
				height: auto;
				gap: 1rem;
				padding: 2rem 1rem; /* Reduced padding for mobile devices */
			}

			.slide-item {
				width: 100%;
				height: 200px;
				flex: none;
			}

			.slide-item:hover {
				flex: none;
				height: 300px;
			}
		}
	</style>
</Layout>
